.text= markdown @assignment_participation.view_text

.info= @assignment_participation.show_info(@user)

- if !@form.empty?
  .form{:id => "form-#{@form[:id]}"}

  :javascript
    Ext.onReady(function(){
      new Ext.form.FormPanel({
        renderTo: "form-#{@form[:id]}",
        items: #{@form[:items].to_json},
        method: #{@form[:method].to_json},
        fileUpload: #{@form[:fileUpload].to_json},
        url: #{@form[:url].to_json},
        buttons: [{
          text: #{@form[:submit].to_json},
          type: 'submit',
          handler: function() {
            var fp = this.ownerCt.ownerCt;
            var form = fp.getForm();
            if(form.isValid()) {
              form.submit({
                method: #{@form[:method].to_json},
                url: #{@form[:url].to_json},
                success: function(f,a) {
                  var panel = Ext.ComponentMgr.get(#{@form[:id].to_json});
                  panel.load({
                    url: #{@form[:show_url].to_json},
                    scripts: true
                  });
                }
              });
            }
          }
        }, {
          text: 'Reset',
          type: 'reset'
        }],
        buttonAlign: 'center',
        bodyBorder: false,
        border: false,
        frame: true,
        method: #{@form[:method].to_json}
      });
    });
